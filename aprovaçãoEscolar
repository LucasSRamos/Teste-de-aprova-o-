/*Média de 3 notas tiradas por um aluno na faculdade. Definindo se foi aprovado, reprovado ou em recuperação.
Média menor que 5 - reprovação
Média entre 5 e 7 - recuperação
Média maior que 7 - aprovado */

const mediaNota1 = 10 ;
const mediaNota2 = 8 ;
const mediaNota3 = 5 ;

const mediaGeral = (mediaNota1 + mediaNota2 + mediaNota3) /3;

if (mediaGeral > 7) {
    console.log('Com a média de ' + mediaGeral.toFixed(2) + '. O Aluno passou de semestre!')    
} else if (mediaGeral < 5){ 
    console.log('Com a média de ' + mediaGeral.toFixed(2) + '. O Aluno reprovou de semestre!')
}   else {
    console.log('Com a média de ' + mediaGeral.toFixed(2) + '. O Aluno está em recuperação.')
}
